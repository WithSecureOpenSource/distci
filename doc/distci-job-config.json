{
    "configuration-version": "2013-02-26",
    "job_id": "distci",
    "tasks":
    [
        {
            "type": "git-checkout",
            "params":
            {
                "repository": "https://github.com/F-Secure/distci.git",
                "ref": "heads/master",
                "checkout-dir": "distci"
            }
        },
        {
            "type": "execute-shell",
            "params":
            {
                "working_directory": "distci",
                "script": "make tests\nmake\n"
            }
        },
        {
            "type": "publish-artifacts",
            "params":
            {
                "artifacts": ["distci/dist/*.egg", "distci/build.log" ]
            }
        }
    ]
}

